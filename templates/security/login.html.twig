{% extends 'base.html.twig' %}

{% block title %}Jet:Laged:Brains - Espace connexion{% endblock %}

 {% block pageName %} Se connecter {% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Bienvenue {{ app.user.userIdentifier }} !, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <div class="container-sm w-25 mt-4">
            <label for="inputEmail" class="mb-1">Email :</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3"
                   autocomplete="email" required autofocus>
            <label for="inputPassword" class="mb-1">Mot de passe : </label>
            <input type="password" name="password" id="inputPassword" class="form-control mb-3"
                   autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <div class="checkbox mb-3 mx-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>

            <button class="btn btn-lg btn-primary mx-1 my-1" type="submit">
                Connexion
            </button>

            <a href="{{ path('app_forgot_password_request') }}" class="link-secondary">Mot de passe oublié ?</a>
        </div>
    </form>
{% endblock %}
