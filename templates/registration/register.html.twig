{% extends 'base.html.twig' %}

{% block title %}Nouvel utilisateur{% endblock %}

{% block pageName %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}

    {{ form_row(registrationForm.pseudo, { label: 'Pseudo' }) }}
    {{ form_row(registrationForm.lastName, { label: 'Nom' }) }}
    {{ form_row(registrationForm.firstName, { label: 'Prénom' }) }}
    {{ form_row(registrationForm.phoneNumber, { label: 'N° de téléphone' }) }}
        {{ form_row(registrationForm.email, { label: 'Email' }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
    {{ form_row(registrationForm.campus) }}

    {{ form_end(registrationForm) }}
{% endblock %}
