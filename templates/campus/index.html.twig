{% extends 'base.html.twig' %}

{% block title %}Liste des sites {% endblock %}

{% block pageName %}Liste des sites{% endblock %}

{% block body %}
<div class="container mb-4 p-4">
       <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for campus in campuses %}
            <tr>
                <td>{{ campus.id }}</td>
                <td>{{ campus.name }}</td>
                <td>
                    <a href="{{ path('app_campus_edit', {'id': campus.id}) }}" class="btn btn-outline-secondary"> Modifier </a>
                        <a href="{{ path('app_campus_delete', {'id': campus.id}) }}" class="btn btn-outline-danger mx-3"> Supprimer </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun site trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary mx-4 my-3"  href="{{ path('app_campus_new') }}"> Nouveau site</a>

    <a href="{{ path('home_home') }}" class="link-secondary"> Retour à la l'accueil</a>
</div>
{% endblock %}
