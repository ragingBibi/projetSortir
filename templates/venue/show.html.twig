{% extends 'base.html.twig' %}



{% block title %}Lieu{% endblock %}
{% block pageName %}Lieu{% endblock %}

{% block body %}

    {% if app.user.isActive == false %}
        <h2 >Compte bloqué</h2>
        <p>L'accès de votre compte a été restreint par les administrateurs.</p>
    {% endif %}

    {% if app.user.isActive == true %}
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="col">Id</th>
                    <td>{{ venue.id }}</td>
                </tr>
                <tr>
                    <th scope="col">Nom</th>
                    <td>{{ venue.name }}</td>
                </tr>
                <tr>
                    <th scope="col">Rue</th>
                    <td>{{ venue.street }}</td>
                </tr>
                <tr>
                    <th scope="col">Latitude</th>
                    <td>{{ venue.latitude }}</td>
                </tr>
                <tr>
                    <th scope="col">Longitude</th>
                    <td>{{ venue.longitude }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_venue_edit', {'id': venue.id}) }}">Modifier</a>
        <br>
        <a href="{{ path('app_venue_index') }}">Retour à la liste</a>



        {{ include('venue/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
